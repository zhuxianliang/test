{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "@common/*": ["common/*"],
      "@/*": ["src/*"]
    },
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "common/**/*.ts",
    "common/**/*.d.ts",
    "common/**/*.tsx",
    "common/**/*.vue",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "components/**/*.ts",
    "components/**/*.d.ts",
    "components/**/*.tsx",
    "components/**/*.vue",
    "template/**/*.ts",
    "template/**/*.d.ts",
    "template/**/*.tsx",
    "template/**/*.vue",
    "dev/**/*.ts",
    "dev/**/*.d.ts",
    "dev/**/*.tsx",
    "dev/**/*.vue",
    "test/**/*.ts",
    "test/**/*.d.ts",
    "test/**/*.tsx",
    "test/**/*.vue",
    "node_modules/@q/lc-common/global.d.ts"
  ],
  "exclude": ["build/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
